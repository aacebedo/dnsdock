# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

[*.go]
insert_final_newline = ignore
indent_style = tabs

[*.json]
insert_final_newline = ignore

[*.md]
trim_trailing_whitespace = false

